# =============================================================================
# ENVIRONMENT VARIABLES FOR REAL BLOCKCHAIN TRANSACTIONS
# =============================================================================
# Copy this file to .env and replace dummy values with your actual credentials
# WARNING: Never commit your actual .env file to version control!

# =============================================================================
# GOOGLE GEMINI API CONFIGURATION
# =============================================================================
# Required for the LLM agent functionality
GOOGLE_API_KEY=your_gemini_api_key_here

# =============================================================================
# HEDERA NETWORK CONFIGURATION
# =============================================================================
# Your Hedera operator account ID (format: 0.0.123456) - Hiero SDK standard
OPERATOR_ID=0.0.123456

# Your Hedera operator private key (DER format) - Hiero SDK standard
OPERATOR_KEY=302e020100300506032b657004220420abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Network to use: "testnet" or "mainnet" (RECOMMENDED: testnet for testing) - Hiero SDK standard
NETWORK=testnet

# Alternative variable names (for backward compatibility)
HEDERA_ACCOUNT_ID=0.0.123456
HEDERA_PRIVATE_KEY=302e020100300506032b657004220420abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890
HEDERA_NETWORK=testnet

# =============================================================================
# ETHEREUM NETWORK CONFIGURATION (SEPOLIA TESTNET)
# =============================================================================
# Your Ethereum private key (hex format without 0x prefix)
ETHEREUM_PRIVATE_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Ethereum RPC URL (Alchemy, Infura, or other provider)
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_api_key_here

# Ethereum Chain ID (11155111 for Sepolia testnet)
ETHEREUM_CHAIN_ID=11155111

# =============================================================================
# POLYGON NETWORK CONFIGURATION (MUMBAI TESTNET)
# =============================================================================
# Your Polygon private key (hex format without 0x prefix)
POLYGON_PRIVATE_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Polygon RPC URL (Alchemy, Infura, or other provider)
POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your_alchemy_api_key_here

# Polygon Chain ID (80001 for Mumbai testnet)
POLYGON_CHAIN_ID=80001

# =============================================================================
# TRANSACTION SETTINGS
# =============================================================================
# Default gas limit for Ethereum/Polygon transactions
DEFAULT_GAS_LIMIT=21000

# Gas price in Gwei (optional, will use network gas price if not set)
GAS_PRICE_GWEI=20

# =============================================================================
# OPTIONAL: LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL: NETWORK-SPECIFIC SETTINGS
# =============================================================================
# Hedera operator account (usually same as HEDERA_ACCOUNT_ID)
HEDERA_OPERATOR_ID=0.0.123456

# Maximum transaction fee for Hedera (in HBAR)
HEDERA_MAX_FEE=1.0

# Ethereum gas price multiplier (1.0 = normal, 1.1 = 10% higher)
ETHEREUM_GAS_MULTIPLIER=1.0

# Polygon gas price multiplier (1.0 = normal, 1.1 = 10% higher)
POLYGON_GAS_MULTIPLIER=1.0

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. NEVER use mainnet private keys for testing
# 2. ALWAYS use testnet accounts with test tokens
# 3. Keep your private keys secure
# 4. Never commit this file to version control
# 5. Use different accounts for development and production
# 6. Rotate keys regularly

